<div class="container-fluid h-100">
  <div class="row h-100 justify-content-center align-items-center">
    <div class="col-lg-5">
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="text-center">
          <%= image_tag("aurora.png", :class=>"img-fluid", :size=>"160x160")%>
          <h1 class="h3 mb-3 fw-normal mt-4">Sign up</h1>
        </div>

        <div class="form-input">
          <%= f.input :name,
                      placeholder: "Name",
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "name" }%>
        </div>

        <div class="form-input mt-2">
          <%= f.input :email,
                      placeholder: "Email address",
                      required: true,
                      input_html: { autocomplete: "email" }%>
        </div>

        <div class="form-input mt-2">
          <%= f.input :contact,
                      placeholder: "Contact number",
                      required: true,
                      input_html: { autocomplete: "contact" }%>
        </div>

        <div class="form-input mt-2">
          <%= f.input :address,
                      placeholder: "Your address",
                      required: true,
                      input_html: { autocomplete: "address" }%>
        </div>
        <div class="form-input my-2">
          <%= f.input :password,
                placeholder: "Account password",
                required: true,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password" } %>
        </div>

        <div class="form-input my-2">
            <%= f.input :password_confirmation,
                label: "Confirm password",
                placeholder: "Re-type password",
                required: true,
                input_html: { autocomplete: "new-password" } %>
        </div>

        <%= f.button :submit, "Sign up", :class=>"w-100 btn btn-lg btn-primary" %>
        <div class="text-center mt-4">
          <small class="mt-5 mb-3 text-muted">
            <%- if controller_name != 'sessions' %>
              <%= link_to "Log in", new_session_path(resource_name) %><br />
            <% end %>

            <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
              <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name) %><br />
            <% end %>

            <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
              <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name) %><br />
            <% end %>
          </small>
        </div>
      <% end %>
    </div>
  </div>
</div>
