<% if flash[:notice] %>
    <div class="row justify-content-center">
      <div class="col-lg-6">
        <div id="notice_wrapper">
            <div class="mx-3 alert alert-success">
              <%= flash[:notice] %>
            </div>
        </div>
      </div>
    </div>
<% elsif flash[:error] %>
    <div class="row justify-content-center">
      <div class="col-lg-6">
        <div id="notice_wrapper">
            <div class="mx-3 alert alert-danger">
              <%= flash[:error] %>
            </div>
        </div>
      </div>
    </div>
<% elsif flash[:alert] %>
    <div class="row justify-content-center">
      <div class="col-lg-6">
        <div id="notice_wrapper">
            <div class="mx-3 alert alert-warning">
              <%= flash[:alert] %>
            </div>
        </div>
      </div>
    </div>
<% end %>