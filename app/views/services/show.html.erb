<%= render "shared/nav_admin" %>

<div class="container-fluid mt-5">
  <div class="row justify-content-center mt-4">
    <div class="col-lg-12">
      <div class="card">
        <div class="card-header"><%= @service.name %></div>
        <div class="card-body">
          <small class="text-muted">
            Service created at <%= @service.created_at.strftime("%B, %d, %Y")%><br>
            Service Capacity: <%= @service.capacity %> hours<br>
            Current Usage: <%= @service.current_usage %> hours<br>

            <div class="text-center">
              <%= image_tag(@service.qr_code) if @service.qr_code.attached? %>
            </div>
            <div>
              <p class="lead"><%= sanitize @service.description %></p>
            </div>
          </small>
        </div>
      </div>
      <div class="mt-2">
        <%= link_to "Back", services_path, :class=>"btn btn-primary"%>
        <%= link_to "Edit", edit_service_path, :class=>"btn btn-warning"%>
        <%= link_to "Add New", new_service_path, :class=>"btn btn-info"%>
        <%= link_to "Delete", service_path, method: :delete, data:{confirm: "Are you sure?"}, :class=>"btn btn-danger"%>
      </div>
    </div>
  </div>
</div>