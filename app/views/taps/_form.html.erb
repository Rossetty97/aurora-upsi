<div class="container-fluid">
	<div class="row justify-content-center">
		<div class="col-lg-12">
			<div class="card my-2">
				<div class="card-header"><i class="far fa-clock me-1"></i>Check In/Out</div>
				<div class="card-body">
					<%= simple_form_for([@service, @service.taps.build]) do |f| %>
						<div class="form-group">
							<label>
								<i class="fas fa-arrow-right me-1"></i> In Time
							</label>
							<%= f.input :in_time,
								label: false, hint: "Select in time only if you are just checking in.",
								start_hour: Time.now.hour
								%>
						</div>
						<div class="form-group">
							<label>
								<i class="fas fa-arrow-left me-1"></i> Out Time
							</label>
							<%= f.input :out_time, label: false, hint: "Select out time only if you have already checked in.", start_hour: Time.now.hour %>
						</div>
					
						<%= button_tag( :class => "btn btn-primary col-12") do %>
							<i class="fas fa-paper-plane"></i>
						<% end %>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>