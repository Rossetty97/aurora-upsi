<div class="container-fluid mt-2">
	<div class="row justify-content-center mt-3">
		<div class="col-lg-12">
			<div class="card">
				<div class="card-header"><i class="far fa-clock me-1"></i>Check In/Out</div>
				<div class="card-body">
					<%= simple_form_for([@service, @service.taps.build]) do |f| %>
						<%= f.input :in_time, label: "In Time", hint: "Select in time only if you are just checking in." %><br>
						<%= f.input :out_time, label: "Out", hint: "Select out time only if you have already checked in." %><br>
						<%= button_tag( :class => "btn btn-primary col-12") do %>
							<i class="fas fa-paper-plane"></i>
						<% end %>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>