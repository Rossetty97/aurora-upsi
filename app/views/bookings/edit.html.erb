<% if current_user && current_user.role=="Admin" %>
  <%= render "shared/nav_admin" %>
<% elsif current_user && current_user.role=="User" %>
  <%= render "shared/nav_user" %>
<% else %>
  <%= render "shared/nav_public" %>
<% end %>

<div class="container-fluid mt-5">
  <div class="row jutsify-content-center mt-3">
    <div class="col-lg-12">
      <div class="card mt-4">
        <div class="card-header">
          <i class="fas fa-question-circle me-1"></i>Booking Procedures
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item">1. See our complete service list and pricing options from <a href="http://aurora.upsi.edu.my/perkhidmatan/" target="_blank"><i class="fas fa-external-link-alt me-1"></i>here</a></li>
          <li class="list-group-item">2. Make payment in <a href="https://epayment.upsi.edu.my/" target="_blank"><i class="fas fa-external-link-alt me-1"></i>ePayment</a></li>
          <li class="list-group-item">3. Collect the Payment Reference & Use in filling up booking form <i class="far fa-arrow-alt-circle-down me-1"></i></li>
        </ul>
      </div>
    </div>
  </div>
  <div class="row jutsify-content-center mt-3">
    <div class="col-lg-12">
      <div class="card mt-4">
        <div class="card-header"><i class="far fa-edit me-1"></i>Update Booking</div>
        <div class="card-body">
          <%= render 'form', booking: @booking %>
        </div>
      </div>
    </div>
  </div>
</div>