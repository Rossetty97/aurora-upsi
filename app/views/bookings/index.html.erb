<% if current_user && current_user.role=="Admin" %>
  <%= render "shared/nav_admin" %>
<% elsif current_user && current_user.role=="User" %>
  <%= render "shared/nav_user" %>
<% else %>
  <%= render "shared/nav_public" %>
<% end %>

<% if current_user && current_user.role=="Admin" %>
  <div class="container-fluid pt-5">
    <div class="row justify-content-center pt-4">
    <p class="h6 mt-4">List of Booking Requests</h1>
      <div class="col-lg-12">
        <table class="table">
          <thead>
            <tr>
              <th>Application Date</th>
              <th>Booking Date & Time</th>
              <th>Payment Reference</th>
              <th>User Name</th>
              <th>User Email</th>
              <th>User Contact</th>
              <th>Service</th>
              <th>Status</th>
              <th colspan="3">Actions</th>
            </tr>
          </thead>

          <tbody>
            <% @bookings.each do |booking| %>
              <tr>
                <td><%= booking.created_at.strftime("%B, %d, %Y")%></td>
                <td><%= booking.date_time.strftime("%B, %d, %Y %I:%M %p")%></td>
                <td><%= booking.payment_reference %></td>
                <td><%= booking.user.name %></td>
                <td><%= booking.user.email %></td>
                <td><%= booking.user.contact %></td>
                <td><%= booking.service.name %></td>
                <td>
                  <% if booking.status=="Pending Descision" %>
                    <span class="badge bg-warning">Pending Descision</span>
                  <% elsif booking.status=="Approved"%>
                    <span class="badge bg-success">Approved</span>
                  <% elsif booking.status=="Rejected"%>
                    <span class="badge bg-danger">Rejected</span>
                  <% end %>
                </td>
                
                <td>
                  <%= link_to booking, :class=>"btn btn-primary" do %>
                    <i class="far fa-eye me-1"></i>Show
                  <% end %>
                  <%= link_to edit_booking_path(booking), :class=>"btn btn-info" do %>
                    <i class="far fa-edit me-1"></i>Edit
                  <% end %>
                  <%= link_to booking, method: :delete, data: { confirm: 'Are you sure?' }, :class=>"btn btn-danger" do %>
                    <i class="far fa-trash-alt me-1"></i>Remove
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <div class="container-fluid pt-3">
    <div class="row justify-content-center pt-2">
      <div class="col-lg-12">
        <%= link_to root_path, :class=>"btn btn-primary col-12" do %>
          <i class="far fa-arrow-alt-circle-left"></i>
        <% end %>
      </div>
    </div>
  </div>

<% else %>
<div class="container-fluid pt-5">
  <div class="row justify-content-center pt-4">
    <p class="h6 mt-4">My Booking Requests</h1>
      <div class="col-lg-12">
        <table class="table">
          <thead>
            <tr>
              <th>Application Date</th>
              <th>Booking Date & Time</th>
              <th>Payment Reference</th>
              <th>Service</th>
              <th>Status</th>
              <th colspan="3">Actions</th>
            </tr>
          </thead>

          <tbody>
            <% current_user.bookings.each do |booking| %>
              <tr>
                <td><%= booking.created_at.strftime("%B, %d, %Y")%></td>
                <td><%= booking.date_time.strftime("%B, %d, %Y %I:%M %p")%></td>
                <td><%= booking.payment_reference %></td>
                <td><%= booking.service.name %></td>
                <td>
                  <% if booking.status=="Pending Descision" %>
                    <span class="badge bg-warning">Pending Descision</span>
                  <% elsif booking.status=="Approved"%>
                    <span class="badge bg-success">Approved</span>
                  <% elsif booking.status=="Rejected"%>
                    <span class="badge bg-danger">Rejected</span>
                  <% end %>
                </td>
                
                <td>
                  <%= link_to booking, :class=>"btn btn-primary" do %>
                    <i class="far fa-eye me-1"></i>Show
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <div class="container-fluid pt-3">
    <div class="row justify-content-center pt-2">
      <div class="col-lg-12">
        <%= link_to new_booking_path, :class=>"btn btn-primary col-12" do %>
          <i class="fas fa-plus me-1"></i> New Booking
        <% end %>
      </div>
    </div>
  </div>
<% end %>